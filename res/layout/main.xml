<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">    
    
    <Button android:id="@+id/btn_schools"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Schools" />
        
    <Button android:id="@+id/btn_police_stations"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Police Stations" />
        
    <Button android:id="@+id/btn_fire_stations"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Fire Stations" />
        
    <Button android:id="@+id/btn_community_league_centers"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Community League Centres" />        

</LinearLayout>
