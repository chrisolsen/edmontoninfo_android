<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Text -->
	<style name="TextAppearance" parent="@android:style/TextAppearance">
		<item name="android:textSize">16dip</item>
		<item name="android:textColorLink">#e00</item>
	</style>
	
	<style name="TextAppearance.WindowTitle">
		<item name="android:textSize">18dip</item>
		<item name="android:textColor">#fff</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="TextAppearance.Button">
		<item name="android:textSize">16dip</item>
		<item name="android:textColor">#fff</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="TextAppearance.EditText"> 
        <item name="android:textSize">14sp</item>
    </style> 
	
	<!-- Window -->
	<style name="WindowTitleBackground">
		<item name="android:background">@drawable/window_title_background</item>
	</style>
	
	<!-- Widgets -->
	<style name="Widget" parent="android:Widget">
		<item name="android:textAppearance">@style/TextAppearance</item>
	</style>
	
	<style name="Widget.Button"	parent="android:Widget.Button">
		<item name="android:textColor">#f111</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16sp</item>
		<item name="android:shadowColor">#beee</item>
		<item name="android:shadowRadius">2.75</item>
	</style>
	
	<style name="WindowTitle">
		<item name="android:singleLine">true</item>
		<item name="android:textAppearance">@style/TextAppearance.WindowTitle</item>
		<item name="android:shadowColor">#b000</item>
		<item name="android:shadowRadius">2.75</item>
	</style>
	
	<style name="Widget.EditText" parent="android:Widget.EditText"> 
        <item name="android:textAppearance">@style/TextAppearance.EditText</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:gravity">top</item>
     </style> 
     
    <style name="Widget.ListView" parent="android:Widget.ListView"> 
        <item name="android:listSelector">@drawable/list_selector_background</item>
        <item name="android:cacheColorHint">@color/color_foreground</item>
        <item name="android:divider">@drawable/list_item_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style> 

	<!-- Custom -->
	<style name="page_header">
		<item name="android:background">@drawable/page_header</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">10dip</item>
	</style>
	
    <style name="header" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">16dip</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:layout_alignParentLeft">true</item>
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="header_detail" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#333</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dip</item>
    </style>

    <style name="table_label" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666</item>
        <item name="android:gravity">right</item>
    </style>
    
    <style name="table_value" parent="@android:style/TextAppearance.Small">
        <item name="android:padding">5dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="cell_header" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">14dip</item>
        <item name="android:textStyle">bold</item>
    </style>

	<style name="cell_details" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">12dip</item>
    </style>   
    
    <style name="list_view_more_details">
    	<item name="android:layout_width">wrap_content</item>
  		<item name="android:layout_height">wrap_content</item>
  		<item name="android:layout_alignParentRight">true</item>
  		<item name="android:layout_centerVertical">true</item>
		<item name="android:src">@drawable/more_details</item>
    </style>    
    
    <!-- MapContextMenu -->
    <style name="map_context_row">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>
             
    <style name="map_context_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="map_context_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">20dip</item>
    </style>
    
    <style name="map_context_address">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
</resources>